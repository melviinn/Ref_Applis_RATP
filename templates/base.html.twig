<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Accueil{% endblock %}</title>
        <link rel="icon" type="image/png" sizes="16x16" href="http://recette-portail-immos.info.ratp/images/favicon.ico">
        <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('lib/jquery-ui-1.12.1.custom/jquery-ui.min.css') }}" type="text/css">
            <link rel="stylesheet" href="{{ asset('lib/bootstrap-4.1.3-dist/css/bootstrap.min.css') }}" type="text/css">
            <link rel="stylesheet" href="{{ asset('assets/fontawesome-free/css/all.min.css') }}" type="text/css">
            <link rel="stylesheet" href="{{ asset('assets/css/sb-admin-2.css') }}" type="text/css">
            <link rel="stylesheet" href="{{ asset('css/base.css') }}" type="text/css">
        {% endblock %}
    </head>

    <body>
        <div id="wrapper">
            <div id="content-wrapper">
                <div id="content">
                    <!-- Topbar -->
                    <nav class="navbar navbar-expand bg-gradient-primary topbar mb-4 static-top shadow">
                        <a class="navbar-brand">
                            <div class="navbar-brand-text mx-3">Référentiel Applis</div>
                        </a>
                        <div class="topbar-divider d-none d-sm-block mr-4"></div>
                        <a class="icon text-white-50" href="{{ path('app_accueil') }}">
                            <i class="fas fa-home fa-lg"></i>
                        </a>
                        <ul class="navbar-nav ml-auto">
                            <!-- Nav Item - Utilisateur -->
                            <li class="nav-item dropdown no-arrow mx-1 ml-auto ">
                                <a class="login nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <div class="username">
                                        DUCHAUFOUR Melvin
                                    </div>
                                    <p>rôle</p>
                                </a>
                                <!-- Dropdown - Information Utilisateur -->
                                <div class=" dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                                    <a class="dropdown-item" href="">
                                        <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                        Déconnexion
                                    </a>
                                </div>
                            </li>
                        </ul>
                    </nav>
                    {% block body %}
                    <!-- Main Content -->
                    {% endblock %}
                </div>
            </div>
        </div>
        {% block javascripts %}
            <script src="{{ asset('lib/jquery-3.5.1/jquery-3.5.1.min.js') }}"></script>
            <script src="{{ asset('lib/jquery-ui-1.12.1.custom/jquery-ui.min.js') }}"></script>
            <script src="{{ asset('lib/jquery-ui-1.12.1.custom/i18n/datepicker-fr.js') }}"></script>
            <script src="{{ asset('lib/bootstrap-4.1.3-dist/js/bootstrap.bundle.min.js') }} "></script>
            <script src="{{ asset('lib/jquery.redirect-master/jquery.redirect.js') }}"></script>
            <script src="{{ asset('assets/js/sb-admin-2.min.js') }}"></script>
        {% endblock %}
    </body>
</html>
